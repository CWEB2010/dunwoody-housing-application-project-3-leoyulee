<Window x:Class="Project_Three_GUI.LandingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Three_GUI"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" WindowStyle="None">
    <DockPanel Style="{StaticResource WindowPrimaryBackground}">
        <Button  VerticalAlignment="Top" Content="X" Click="CloseButtonClicked" DockPanel.Dock="Right" Height ="20" Width="20" Style="{StaticResource ButtonColor}"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="LoginStackPanel">
            <TextBox HorizontalAlignment="Center" Margin="0 0 0 5"  Height="23" TextWrapping="Wrap" Text="Username" VerticalAlignment="Center" Width="120" x:Name="UsernameBox"/>
            <TextBox HorizontalAlignment="Center" Margin="0 0 0 5" Height="23" TextWrapping="Wrap" Text="Password" VerticalAlignment="Center" Width="120" x:Name="PasswordBox"/>
            <Button Content="Sign In" HorizontalAlignment="Center" Margin="0 0 0 5" VerticalAlignment="Center" Width="75" x:Name="SignInBtn" Style="{StaticResource ButtonColor}" Click="Button_Click"/>
        </StackPanel>
    </DockPanel>
    
</Window>
